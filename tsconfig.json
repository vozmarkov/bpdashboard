{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["custom.d.ts"]
  },
  "include": ["./src","webpack.main.config.js" ],
  "files": [
    "src/custom.d.ts"
  ]
}
